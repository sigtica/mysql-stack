[mysqld]
# Maximum allowed packet size for client/server communication (in bytes)
max_allowed_packet = 104857600

# Maximum number of concurrent connections allowed
max_connections = 4000

# Timeout for inactive connections in seconds
wait_timeout = 1800  # Timeout is set to 1800 seconds (30 minutes)

# Size of the buffer used for sorting operations (in bytes)
sort_buffer_size = 10485760

# Default time zone for the server (UTC - Coordinated Universal Time)
default-time-zone = "+00:00"
